<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/moon"
        android:layout_margin="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/list_activity_title"
        android:layout_toRightOf="@+id/imageView"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/list_activity_name"
        android:layout_below="@+id/list_activity_title"
        android:layout_alignLeft="@+id/list_activity_title"
        android:layout_alignStart="@+id/list_activity_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/list_activity_destination"
        android:layout_below="@+id/list_activity_title"
        android:layout_toEndOf="@+id/list_activity_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/list_activity_time"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toStartOf="@+id/list_activity_destination" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/check_button"
        android:id="@+id/imageButton4"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:layout_marginLeft="250dp"
        android:layout_above="@+id/list_activity_time"
        android:layout_toStartOf="@+id/imageButton5"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/button_cross"
        android:scaleType="fitCenter"
        android:id="@+id/imageButton5"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/imageButton4"
        android:background="#00000000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp" />

</RelativeLayout>

