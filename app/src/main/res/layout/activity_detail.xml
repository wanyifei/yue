<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="385dp"
        android:layout_height="fill_parent"
        android:layout_weight="1">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/flower"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imageView2"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp" />

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="116dp"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Name"
                        android:id="@+id/activity_name"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Destination"
                        android:id="@+id/activity_destination"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Departure Location"
                        android:id="@+id/activity_depature_location"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Departure Time"
                        android:id="@+id/activity_depature_time"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Remark"
                        android:id="@+id/activity_remark"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="waiting for data..."
                        android:id="@+id/fill_activity_name"
                        android:layout_marginTop="20dp"
                        android:textColor="#ff190f93" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="waiting for data..."
                        android:id="@+id/fill_activity_destination"
                        android:layout_marginTop="20dp"
                        android:textColor="#ff190f93" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="waiting for data..."
                        android:id="@+id/fill_activity_depature_location"
                        android:layout_marginTop="20dp"
                        android:textColor="#ff190f93" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="waiting for data..."
                        android:id="@+id/fill_activity_depature_time"
                        android:layout_marginTop="20dp"
                        android:textColor="#ff190f93" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="waiting for data..."
                        android:id="@+id/fill_activity_remark"
                        android:layout_marginTop="20dp"
                        android:textColor="#ff190f93" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="149dp"
        android:weightSum="1">

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="88dp"
            android:src="@drawable/activity_detail_button"
            android:id="@+id/imageButton"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>