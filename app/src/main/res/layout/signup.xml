<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper2_new">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.9"
        android:weightSum="1">

        <ImageButton
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:id="@+id/signup_photo"
            android:src="@drawable/default_user_photo"
            android:background="#00000000"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:focusable="false"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.5">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="151dp"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="Username:"
                android:id="@+id/signup_text_username"
                android:layout_gravity="center|right"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/abc_text_size_body_2_material"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="Password:"
                android:id="@+id/signup_text_password"
                android:layout_gravity="center|right"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/abc_text_size_body_2_material"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="Gender:"
                android:id="@+id/signup_text_gender"
                android:layout_gravity="center|right"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/abc_text_size_body_2_material"
                android:layout_marginRight="10dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="Email Address:"
                android:id="@+id/signup_text_email"
                android:layout_gravity="center|right"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/abc_text_size_body_2_material"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="Phone Number:"
                android:id="@+id/signup_text_phone"
                android:layout_gravity="center|right"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/abc_text_size_body_2_material"
                android:layout_marginRight="10dp"/>



        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:paddingLeft="10dp"
            android:paddingRight="30dp">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/signup_username"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/welcome_grid"
                android:paddingStart="8dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/signup_password"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/welcome_grid"
                android:paddingStart="8dp"/>

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/signup_gender"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:prompt="@string/gender_label"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/signup_email"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/welcome_grid"
                android:paddingStart="8dp"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/signup_phone"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/welcome_grid"
                android:paddingStart="8dp"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup_button_signup"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/signup_button_pic"
            android:background="#00000000"
            android:layout_marginBottom="20dp"
            android:scaleType="centerInside" />
    </LinearLayout>

</LinearLayout>